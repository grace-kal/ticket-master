@model TicketMaster.Areas.Admin.ViewModels.Company.DeleteCompanyViewModel
@{
    ViewData["Title"] = "DeleteCompany";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Company</h1>
<form asp-area="Admin" asp-controller="Company" asp-action="DeleteCompany" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" readonly class="form-control" />
        <span asp-validation-for="Id"></span>
    </div>
    @if (Model.IsDeleted)
    {
        <div class="form-group">
            <label class="text-danger">Unactive company</label>
            <input type="hidden" asp-for="IsDeleted" readonly />
            <span asp-validation-for="IsDeleted"></span>
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="text-success">Active company</label>
            <input type="hidden" asp-for="IsDeleted" readonly />
            <span asp-validation-for="IsDeleted"></span>
        </div>
    }


    <button type="submit" class="btn btn-danger"> Delete Company</button>
    <a asp-action="DisplayAllCompanies">Back To list</a>

</form>

