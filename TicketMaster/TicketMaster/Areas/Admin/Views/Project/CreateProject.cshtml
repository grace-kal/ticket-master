@model TicketMaster.Areas.Admin.ViewModels.Project.CreateProjectBindingModel
@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Project</h1>

<form asp-area="Admin" asp-controller="Project" asp-action="CreateProject" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <p class="text-info">This project Id is generated by the App!</p>
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id"> </span>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description"class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkTime"></label>
        <input asp-for="WorkTime" class="form-control" />
        <span asp-validation-for="WorkTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompanyId"></label>
        <select asp-for="CompanyId" asp-items="ViewBag.CompanyId" ></select>
    </div>
    <div class="form-group">
        <label> Project <abbr title="Checked= Unactive"> Status</abbr></label>
        <input asp-for="IsDelete" />
        <span asp-validation-for="IsDelete"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Project </button>
    <a asp-area="Admin" asp-controller="Project" asp-action="DisplayAllProjects">Back to list </a>
</form>
