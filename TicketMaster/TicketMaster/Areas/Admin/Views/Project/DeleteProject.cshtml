@model TicketMaster.Areas.Admin.ViewModels.Project.DeleteProjectViewModel
@{
    ViewData["Title"] = "DeleteProject";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Project</h1>
<form asp-area="Admin" asp-controller="Project" asp-action="DeleteProject" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" readonly class="form-control" />
        <span asp-validation-for="Id"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" readonly class="form-control" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" readonly class="form-control" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompanyId"></label>
        <input asp-for="CompanyId" readonly class="form-control" />
        <span asp-validation-for="CompanyId"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkTime"></label>
        <input asp-for="WorkTime" readonly class="form-control" />
        <span asp-validation-for="WorkTime"></span>
    </div>
    @if (Model.IsDelete)
    {
        <div class="form-group">
            <label>Unactive project</label>
            <input type="hidden" asp-for="IsDelete" readonly class="form-control" />
            <span asp-validation-for="IsDelete"></span>
        </div>
    }
    else
    {
        <div class="form-group">
            <label>Active project</label>
            <input type="hidden" asp-for="IsDelete" readonly class="form-control" />
            <span asp-validation-for="IsDelete"></span>
        </div>
    }

    <button type="submit" class="btn btn-danger">Delete Project </button>
    <a asp-area="Admin" asp-controller="Project" asp-action="DisplayAllProjects">Back to list </a>

</form>
