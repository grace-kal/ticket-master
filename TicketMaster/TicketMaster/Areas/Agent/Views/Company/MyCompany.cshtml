@model TicketMaster.Models.Company
@{
    ViewData["Title"] = "MyCompany";
    Layout = "~/Areas/Agent/Views/Shared/_AgentLayout.cshtml";
}

<h1>My Company</h1>

<div class="row">
    <div>
        <div class="card">
            <div class="card-header">
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width:300px;">
                        <input type="text" id="myInput" name="table_search" onkeyup="myFuction(1)" class="form-control float-right" placeholder="Search by name...">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover">

                    <thead class="text-nowrap">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Projects</th>
                            <th>Workers</th>
                        </tr>
                    </thead>
                    <tbody id="myTableBody">
                        
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Name</td>
                            @if (Model.IsDeleted == false)
                            {
                                <td class=" tag table-success">Active Company</td>
                            }
                            else
                            {
                                <td class="tag table-danger"> Unactive Company</td>
                            }
                            <td><a class="btn btn-outline-dark" asp-area="Agent" asp-controller="Company" asp-action="CompanyProjects" asp-route-id="@Model.Id">Company Projects(@Model.Projects.Count()) </a></td>
                            <td><a class="btn btn-outline-dark" asp-area="Agent" asp-controller="Company" asp-action="CompanyWorkers" asp-route-id="@Model.Id">Company Workers(@Model.Workers.Count()) </a></td>
                            
                        </tr>

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<a asp-area="Agent" asp-controller="Home" asp-action="Index" asp-route-id="@User.Identity.Name">Back to Panel </a> 
@section Scripts {
    <script>

    $(document).ready(myFuction(1));
    </script>
}

