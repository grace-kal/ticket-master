@model Ticket
@{
    ViewData["Title"] = "DeleteTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Ticket</h1>

<form asp-area="" asp-controller="Home" asp-action="DeleteTicket" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label> Ticket Id:</label>
        <input asp-for="Id" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label> Title:</label>
        <input asp-for="Title" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label> Description: </label>
        <input asp-for="Descripton" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label> SendOn: </label>
        <input asp-for="SendOn" readonly class="form-control" />
    </div>
    <div class="form-group">
        <label> Project: </label>
        <input asp-for="ProjectId" readonly class="form-control" />
    </div>
    
    @if (Model.IsDeleted)
    {
        <div class="form-group">
            <label class="text-danger"> Unactive Ticket </label>
            <input asp-for="IsDeleted" hidden />
        </div>
    }
    else
    {
        <div class="form-group">
            <label class="text-success">Active Ticket </label>
            <input asp-for="IsDeleted" hidden />
        </div>
    }

    <button type="submit" class="btn btn-danger"> Delete Ticket</button>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to list</a>

</form>

